{
  "name": "@turtleui/webcomponents",
  "version": "0.1.1",
  "license": "Apache-2.0",
  "type": "module",
  "files": [
    "es2019"
  ],
  "exports": {
    "./package.json": "./package.json",
    "./*": "./es2019/*"
  },
  "main": "./es2019/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/pocka/TurtleUI"
  },
  "devDependencies": {
    "@fontsource/ubuntu": "^4.5.0",
    "@fontsource/ubuntu-mono": "^4.5.0",
    "@types/prismjs": "^1.16.6",
    "glob": "^7.2.0",
    "marked": "^4.0.4",
    "prettier": "^2.3.2",
    "prismjs": "^1.25.0",
    "typescript": "^4.4.4",
    "vite": "^2.7.0-beta.8",
    "web-component-analyzer": "^1.1.6"
  },
  "dependencies": {
    "lit": "^2.0.2"
  },
  "scripts": {
    "build": "tsc --build tsconfig.build.json",
    "dev:import": "node ./scripts/generate-dev-glob-import.js -o ./devtool/imports.ts './src/**/*.dev.ts'",
    "predev": "yarn dev:import",
    "dev": "vite ./devtool",
    "prepack": "yarn build",
    "prewebsite": "yarn build && yarn wc-docs",
    "wc-docs": "node ./scripts/generate-component-docjson.js > ./website/src/wc/spec.json",
    "website": "vite ./website/src",
    "website:build": "vite build ./website/src --outDir '../dist'"
  }
}
